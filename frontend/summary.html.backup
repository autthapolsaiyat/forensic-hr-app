    <script>
        let charts = {};
        
        function toggleTheme() {
            const html = document.documentElement;
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            Object.values(charts).forEach(chart => {
                const textColor = newTheme === 'light' ? '#1e3c72' : 'white';
                if (chart.options.plugins?.legend?.labels) {
                    chart.options.plugins.legend.labels.color = textColor;
                }
                if (chart.options.scales?.x?.ticks) {
                    chart.options.scales.x.ticks.color = textColor;
                }
                if (chart.options.scales?.y?.ticks) {
                    chart.options.scales.y.ticks.color = textColor;
                }
                chart.update();
            });
        }
        
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', savedTheme);
        
        async function loadData() {
            try {
                const [summaryRes, deptsRes] = await Promise.all([
                    fetch('/api/statistics/summary'),
                    fetch('/api/statistics/departments')
                ]);
                
                const summary = await summaryRes.json();
                const depts = await deptsRes.json();
                
                if (summary.success) {
                    const data = summary.data;
                    const total = parseInt(data.total);
                    
                    document.getElementById('totalStat').textContent = total.toLocaleString();
                    document.getElementById('occupiedStat').textContent = parseInt(data.occupied).toLocaleString();
                    document.getElementById('vacantStat').textContent = parseInt(data.vacant).toLocaleString();
                    document.getElementById('sanyabatStat').textContent = parseInt(data.sanyabat).toLocaleString();
                    document.getElementById('pratawanStat').textContent = parseInt(data.pratawan).toLocaleString();
                    document.getElementById('maleStat').textContent = parseInt(data.male).toLocaleString();
                    document.getElementById('femaleStat').textContent = parseInt(data.female).toLocaleString();
                    
                    document.getElementById('occupiedPct').textContent = ((data.occupied/total)*100).toFixed(1) + '%';
                    document.getElementById('vacantPct').textContent = ((data.vacant/total)*100).toFixed(1) + '%';
                    document.getElementById('sanyabatPct').textContent = ((data.sanyabat/total)*100).toFixed(1) + '%';
                    document.getElementById('pratawanPct').textContent = ((data.pratawan/total)*100).toFixed(1) + '%';
                    document.getElementById('malePct').textContent = ((data.male/total)*100).toFixed(1) + '%';
                    document.getElementById('femalePct').textContent = ((data.female/total)*100).toFixed(1) + '%';
                    
                    createCharts(data, depts.data);
                }
                
                if (depts.success) {
                    renderDepartments(depts.data);
                }
            } catch (error) {
                console.error('Error:', error);
            }
        }
        
        function createCharts(summary, departments) {
            const textColor = document.documentElement.getAttribute('data-theme') === 'light' ? '#1e3c72' : 'white';
            
            charts.vacancy = new Chart(document.getElementById('vacancyChart'), {
                type: 'doughnut',
                data: {
                    labels: ['‡∏Ñ‡∏ô‡∏Ñ‡∏£‡∏≠‡∏á', '‡∏ß‡πà‡∏≤‡∏á'],
                    datasets: [{
                        data: [summary.occupied, summary.vacant],
                        backgroundColor: ['#2ecc71', '#e74c3c']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { labels: { color: textColor, font: { size: 12 } } }
                    }
                }
            });
            
            charts.gender = new Chart(document.getElementById('genderChart'), {
                type: 'pie',
                data: {
                    labels: ['‡∏ä‡∏≤‡∏¢', '‡∏´‡∏ç‡∏¥‡∏á'],
                    datasets: [{
                        data: [summary.male, summary.female],
                        backgroundColor: ['#3498db', '#e91e63']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { labels: { color: textColor, font: { size: 12 } } }
                    }
                }
            });
            
            charts.rank = new Chart(document.getElementById('rankChart'), {
                type: 'bar',
                data: {
                    labels: ['‡∏™‡∏±‡∏ç‡∏ç‡∏≤‡∏ö‡∏±‡∏ï‡∏£', '‡∏õ‡∏£‡∏∞‡∏ó‡∏ß‡∏ô'],
                    datasets: [{
                        label: '‡∏à‡∏≥‡∏ô‡∏ß‡∏ô',
                        data: [summary.sanyabat, summary.pratawan],
                        backgroundColor: ['#f39c12', '#9b59b6']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { labels: { color: textColor, font: { size: 12 } } }
                    },
                    scales: {
                        y: { ticks: { color: textColor } },
                        x: { ticks: { color: textColor } }
                    }
                }
            });
            
            const topDepts = departments.sort((a,b) => b.total - a.total).slice(0, 10);
            charts.dept = new Chart(document.getElementById('deptChart'), {
                type: 'bar',
                data: {
                    labels: topDepts.map(d => d.dept),
                    datasets: [{
                        label: '‡∏à‡∏≥‡∏ô‡∏ß‡∏ô',
                        data: topDepts.map(d => d.total),
                        backgroundColor: '#3498db'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { labels: { color: textColor, font: { size: 12 } } }
                    },
                    scales: {
                        y: { ticks: { color: textColor } },
                        x: { ticks: { color: textColor, font: { size: 10 } } }
                    }
                }
            });
        }
        
        function renderDepartments(departments) {
            const grid = document.getElementById('deptGrid');
            grid.innerHTML = departments.map(dept => `
                <div class="dept-card" onclick="window.location.href='/department.html?name=${encodeURIComponent(dept.dept)}'">
                    <div class="dept-name">${dept.dept}</div>
                    ${parseInt(dept.vacant) > 0 ? `
                        <div class="dept-vacancy">
                            <span style="font-size: 18px;">‚ö†Ô∏è</span>
                            <span class="dept-vacancy-label">‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ß‡πà‡∏≤‡∏á</span>
                            <span class="dept-vacancy-badge">${dept.vacant}</span>
                        </div>
                    ` : ''}
                    <div class="dept-stats">
                        <span>üë• ${dept.total}</span>
                        <span>üéñÔ∏è ${dept.sanyabat}</span>
                        <span>üî∞ ${dept.pratawan}</span>
                    </div>
                </div>
            `).join('');
        }
        
        loadData();
    </script>
</body>
</html>
